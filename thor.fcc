variant: fcos
version: 1.0.0
passwd:
  groups:
    - name: public
      gid: 1001
      system: true
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  gollum
    - name: public
      home: /home/public
      no_create_home: true
      primary_group: public
      groups: public
      uid: 973
      system: true
      shell: /sbin/nologin
storage:
  disks:
    - device: /dev/disk/by-id/ata-OCZ-VERTEX3_OCZ-2F9JFXBEF607J0XF
      wipe_table: true
      partitions:
        - label: boot
          number: 1
          size_mib: 1024
          start_mib: 0
        - label: root
          number: 2
  raid:
    - name: data
      level: raid5
      devices:
        - /dev/disk/by-id/ata-WDC_WD20EARS-00MVWB0_WD-WCAZA1951975
        - /dev/disk/by-id/ata-WDC_WD20EARS-00MVWB0_WD-WCAZA2403964
        - /dev/disk/by-id/ata-WDC_WD20EARS-00MVWB0_WD-WMAZA2660615
        - /dev/disk/by-id/ata-WDC_WD20EFRX-68EUZN0_WD-WCC4M2725897
  filesystems:
    - path: /boot
      device: /dev/disk/by-partlabel/boot
      format: ext4
    - path: /
      device: /dev/disk/by-partlabel/root
      format: xfs
    - path: /data
      device: /dev/md/data
      format: xfs
      wipe_filesystem: false
